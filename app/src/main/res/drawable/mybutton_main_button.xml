<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape>
         <corners android:radius="25dp" />
         <stroke android:width="1dp" android:color="#ff5d3c" />
         <gradient android:startColor="#ff5d3c" android:endColor="#ff5d3c"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape >
         <corners android:radius="25dp" />
         <stroke android:width="1dp" android:color="#ff5d3c" />
         <solid android:color="#ff5d3c"/>
     </shape>
 </item>  
<item >
    <shape >
         <corners android:radius="25dp" />
         <stroke android:width="1dp" android:color="#ff5d3c" />
         <gradient android:startColor="#ff5d3c" android:endColor="#ff5d3c" />
     </shape>
 </item>
</selector>