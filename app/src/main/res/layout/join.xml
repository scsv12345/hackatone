<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="@mipmap/join">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userName_edit"
        android:hint="Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/userPassword_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/userPassword_edit"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/userPasswordCF_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/userPasswordCF_edit"
        android:hint="Password confirm"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/userPhoneNumber_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/userPhoneNumber_edit"
        android:hint="010-XXXX-XXXX"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        android:id="@+id/userPhoneNumber_CF_BT"
        android:layout_alignBottom="@+id/userPhoneNumber_edit"
        android:layout_toRightOf="@+id/userPasswordCF_edit"
        android:layout_toEndOf="@+id/userPasswordCF_edit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보제공 동의(필수)"
        android:id="@+id/Cbox_infoshare"
        android:checked="false"
        android:layout_above="@+id/Cbox_agree"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운영약관 동의(필수)"
        android:id="@+id/Cbox_agree"
        android:checked="false"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/Cbox_infoshare"
        android:layout_alignStart="@+id/Cbox_infoshare" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/userName_edit"
        android:layout_alignRight="@+id/userName_edit"
        android:layout_alignEnd="@+id/userName_edit"
        android:layout_alignBottom="@+id/userPhoneNumber_edit"
        android:background="#50000000"></FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_Do"
        android:layout_below="@+id/Cbox_agree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@mipmap/logindo" />

</RelativeLayout>
